<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Deadline at:</strong>
  <%= @task.deadline_at %>
</p>

<p>
  <strong>Project name:</strong>
  <%= @task.project.name %>
</p>

<p>
  <strong>Requested at:</strong>
  <%= @task.created_at %>
</p>

<%= link_to 'Edit', edit_project_task_path(@task.project, @task) %> |
<%= link_to 'Back', project_tasks_path(@task.project) %>

<%= render 'comments/form', project: @project, task: @task, comment: @comment  %>

<h1> Comments: </h1>

<% @comments.each do |comment| %>
  <h4> User #<%= comment.user.first_name %> </h4>
  <p> <%= comment.content %> </p>
  <%= link_to "edit", edit_project_task_comment_path(@task.project, @task, comment) %>
  <%= link_to "delete", project_task_comment_path(@task.project, @task, comment), method: :delete %> 
  <hr>
<% end %>
